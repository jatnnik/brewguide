---
type Option = {
  label: string
  value: string
}

interface Props {
  options: Option[]
}

const { options } = Astro.props
---

<select
  id="brew-select"
  class="rounded-xl border border-stone-200 bg-white px-4 py-2 shadow-sm focus:border-stone-200 focus:ring-0 focus:ring-offset-0"
>
  <option disabled selected value=""> Ausw√§hlen</option>
  {
    options.map((option) => (
      <option value={option.value}>{option.label}</option>
    ))
  }
</select>

<script>
  document
    .querySelector("#brew-select")
    ?.addEventListener("change", (event) => {
      const el = event.target as HTMLSelectElement
      const target = document.querySelector(`#${el.value}`)

      if (target) {
        target.scrollIntoView({
          behavior: "smooth",
        })
      }
    })
</script>
